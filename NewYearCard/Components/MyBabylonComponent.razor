@page "/mybabyloncomponent"
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime

<canvas id="renderCanvas"></canvas>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadBabylonSceneAsync();
        }
    }

    private async Task LoadBabylonSceneAsync()
    {
        await JSRuntime.InvokeVoidAsync("loadBabylon", "renderCanvas");
    }
}